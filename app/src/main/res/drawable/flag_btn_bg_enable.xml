<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/cell_radius"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/cell_radius" />

            <stroke
                android:width="0.5dp"
                android:color="#000000" />

            <gradient
                android:angle="-90"
                android:centerColor="#595959"
                android:endColor="#525252"
                android:startColor="#c1c1c1" />

            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/cell_radius"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/cell_radius" />

            <gradient
                android:angle="-90"
                android:endColor="@color/orange"
                android:startColor="#cecece" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

</layer-list>