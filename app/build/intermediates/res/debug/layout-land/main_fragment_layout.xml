<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp" >

    <Button
        android:id="@+id/main_btn_start_game"
        android:layout_width="285dp"
        android:layout_height="@dimen/menu_button_height"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="@dimen/menu_button_top"
        android:background="@drawable/menu_btn_selector"
        android:text="Start Game"
        android:textColor="@color/menu_text_color"
        android:textAppearance="@android:style/TextAppearance.Large" 
         />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/main_btn_bestTimes"
            android:layout_width="285dp"
            android:layout_height="@dimen/menu_button_height"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/menu_button_top"
            android:layout_weight="1"
            android:background="@drawable/menu_btn_selector"
            android:text="Best Times"
            android:textColor="@color/menu_text_color"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:id="@+id/main_btn_rate"
            android:layout_width="285dp"
            android:layout_height="@dimen/menu_button_height"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/menu_button_top"
            android:layout_weight="1"
            android:background="@drawable/menu_btn_selector"
            android:text="Rate"
            android:textColor="@color/menu_text_color"
            android:textAppearance="@android:style/TextAppearance.Large"  />
    </LinearLayout>

