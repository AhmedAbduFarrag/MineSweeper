<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_fragment_level"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/main_btn_beginner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/menu_button_top"
            android:background="@drawable/menu_btn_selector"
            android:text="Beginner"
            android:textColor="@color/menu_text_color"
             android:textAppearance="@android:style/TextAppearance.Large"
             />

        <Button
            android:id="@+id/main_btn_expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/menu_button_top"
            android:background="@drawable/menu_btn_selector"
            android:text="Expert"
            android:textColor="@color/menu_text_color"
             android:textAppearance="@android:style/TextAppearance.Large"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/main_btn_intermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/menu_button_top"
            android:background="@drawable/menu_btn_selector"
            android:text="Intermediate"
            android:textColor="@color/menu_text_color"
             android:textAppearance="@android:style/TextAppearance.Large"
            />

        <Button
            android:id="@+id/main_btn_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="@dimen/menu_button_top"
            android:background="@drawable/menu_btn_selector"
            android:text="Custom"
            android:textColor="@color/menu_text_color"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </LinearLayout>

